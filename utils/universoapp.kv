<ListaDesejos>:
    canvas:
        Color:
            rgba: [1, 1, 1, 1]
        RoundedRectangle:
            pos: -500, 0
            # Usamos a altura com um calculo para evitar que a imagem ficasse esticada
            size: self.width * 2, self.height
            radius: [0, 0, 0, 0]
            source: 'assets/images/background.jpg'

    MDBoxLayout:
        MDBoxLayout:
            padding: 2
            size_hint_x: 0.35
            MDBoxLayout:
                radius: 20
                md_bg_color: (0.1529, 0.2627, 0.3765, 1)
                orientation: 'vertical'
                MDBoxLayout:
                    size_hint_y: 10
                MDIconButton:
                    padding: 100
                    icon: 'home'
                    theme_icon_color: 'Custom'
                    icon_color: 'white'
                    font_size: sp(20)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_release: app.root.current = 'home'
                MDLabel:
                    padding: 10
                    text: 'Voltar para\nInício'
                    color: 'white'
                    font_size: sp(18)
                    halign: 'center'
                MDBoxLayout:
                    size_hint_y: 1.2

        MDBoxLayout:
            orientation: 'vertical'
            MDBoxLayout:
                padding: 10
                spacing: 2
                orientation: 'vertical'
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: 2
                    padding: 10
                    radius: 20
                    md_bg_color: (0.1529, 0.2627, 0.3765, 0.6)
                    size_hint_y: 0.30
                    MDLabel:
                        size_hint_y: 0.15
                        text: 'Minha lista\nde Desejos:'
                        halign: 'center'
                        valign: 'middle'
                        font_size: sp(30)
                        font_name: 'Poppins-Bold'
                        bold: True
                        # font_style: 'H4'
                        color: 'white'
                MDBoxLayout:
                    md_bg_color: (0.557, 0.388, 0.522, 0.5)
                    radius: 20
                    padding: 15
                    orientation:'vertical'
                    spacing: 2
                    MDScrollView:
                        MDBoxLayout:
                            id: desejo_box
                            orientation: 'vertical'
                            size_hint_y: None
                            height: self.minimum_height

            MDBoxLayout:
                padding: 10
                size_hint_y: 0.25
                MDBoxLayout:
                    padding: 10
                    radius: 20
                    md_bg_color: (0.1529, 0.2627, 0.3765, 0.6)
                    MDBoxLayout:
                        md_bg_color: (0, 0, 0, 0.4)
                        radius: 20
                        MDLabel:
                            padding: 10
                            font_name: 'Poppins-Regular'
                            text: 'Pense positivamente para alcançar seus Desejos\n\nClique em X para concluir um Desejo!'
                            color: 'white'
                            font_size: sp(17)
                            halign: 'center'

